.container
  .row
    .col-md-4.col-md-offset-4
      %h1 Welcome To medicalcoursehub.co.uk
      %p To use medicalcoursehub.co.uk you need an account. If you've already signed up, please login here.
      %p Alternatively you can #{link_to "sign up here", signup_path}.

      
= form_tag sessions_path do
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %h3.panel-title Please sign in
          .panel-body
            %form{"accept-charset" => "UTF-8", role: "form"}
              %fieldset
                .form-group
                  = text_field_tag :email, params[:email], class: "form-control", placeholder: "Email"                
                .form-group
                  = password_field_tag :password, nil, :placeholder => 'Password', class: "form-control"
                .div
                  Create account #{link_to "sign up here", signup_path}

                .actions
                  = submit_tag "Log in", :class => 'btn btn-lg btn-success btn-block'

             